{
  "name": "desktop",
  "private": true,
  "version": "0.0.1",
  "description": "PayFlow - Smart POS Solutions Desktop Application",
  "author": "PayFlow Team",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "make:win": "electron-builder --win",
    "make:win:portable": "electron-builder --win portable",
    "make:win:msi": "electron-builder --win msi"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^32.2.7",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.0",
    "lucide-react": "^0.552.0",
    "react-router-dom": "^7.9.5"
  },
  "build": {
    "appId": "com.payflow.desktop",
    "productName": "PayFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "resources/**",
      "public/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "icon": "resources/icon.png",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "resources/icon.png"
    },
    "linux": {
      "icon": "resources/icon.png"
    }
  }
}
