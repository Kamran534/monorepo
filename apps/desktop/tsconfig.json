{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../web/src/**/*.tsx"],
  "exclude": ["dist", "../web/src/**/*.spec.tsx", "../web/src/**/*.test.tsx"]
}
